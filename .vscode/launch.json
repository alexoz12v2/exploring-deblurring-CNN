{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python App Debugger",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/bazel-bin/app/app.exe.runfiles/_main"
            },
            "cwd": "${workspaceFolder}/bazel-bin/app/app.exe.runfiles/_main",
            "args": ["--window"]
        }
    ]
}